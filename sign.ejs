<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Sign In Page</title>
<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f5f5f5;
    }

    .container {
        max-width: 400px;
        margin: 100px auto;
        background-color: #fff;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        animation: fadeIn 1s ease;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    .container h2 {
        text-align: center;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 20px;
        padding-right: 10PX;
    }

    label {
        display: block;
        margin-bottom: 5px;
    }

    input[type="email"],
    input[type="password"] {
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
    }

    input[type="submit"] {
        width: 100%;
        padding: 10px;
        border: none;
        border-radius: 5px;
        background-color: #007bff;
        color: #fff;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    input[type="submit"]:hover {
        background-color: #0056b3;
    }

    .toggle-btn {
        text-align: center;
    }

    .toggle-btn a {
        color: #007bff;
        text-decoration: none;
        cursor: pointer;
    }
    .loaderContainer {
    position: fixed;
    inset: 0;
    z-index: 999;
    background-color: #0c0603;
    display: grid;
    place-content: center;
    transition: opacity .4s ease-in-out,visibility .4 ease-in-out;
}
.loaderContainer.hidden{
    opacity: 0;
    visibility: hidden;
}
.container{
    opacity: 0;
    transform: translate3d(0,-1rem,0);
    transition: opacity .6s ease-in-out, transform .6 ease-in-out;
}
.container.visible{
    opacity: 1;
    transform: translate3d(0,0,0);
}
.loader {
    width: 4rem;
    height: 4rem;
    border: 0.4rem solid #f27541;
    border-left-color: transparent;
    border-right-color: transparent;
    border-radius: 50%;
    animation: spinner 0.8s ease infinite alternate;
}

@keyframes spinner {
    from {
        transform: rotate(0deg) scale(1);
    }
    to {
        transform: rotate(1turn) scale(1.2);
    }
}









</style>
</head>
<body>
  


    
   
    <div class="loaderContainer">
        <div class="loader"></div>
    
      </div>
    <div class="container">
        <h2>Sign In</h2>
        <form action="/sign" id="signInForm" method="POST">
            <div class="form-group">
                <label for="email">Username</label>
                <input type="email" id="email" name="username" required>
            </div>
            <div  class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" required>
            </div>
            <input type="submit" id="a" value="Sign In" onclick={createLink}  >
        </form>
        <div class="toggle-btn">
            <p>Don't have an account? <a href="/signup">Sign Up</a></p>
        </div>
    </div>


    <script>
        // Function to create a link
        function createLink(url, text) {
            const link = document.createElement('a');
            link.href = url;
            link.textContent = text;
            return link;
        }
    
        // Example usage:
        const myLink = createLink('./index.html', 'Sign In');
    
        // Code to hide loader and show container after 3 seconds
        window.addEventListener('load', () => {
            // Selecting loader and container elements
            const loaderContainer = document.querySelector('.loaderContainer');
            const container = document.querySelector(".container");
    
            // Hiding loader after 3 seconds
            setTimeout(() => {
                loaderContainer.classList.add('hidden');
                container.classList.add('visible');
            }, 1000); // 3000 milliseconds = 3 seconds
        });
    </script>
    
</body>
</html>
